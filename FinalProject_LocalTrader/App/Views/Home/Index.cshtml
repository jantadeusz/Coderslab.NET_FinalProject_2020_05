@{
    ViewData["Title"] = "Home Page";
}

<h1>Witaj w sklepie z produktami lokalnymi</h1>
@if (!User.Identity.IsAuthenticated)
{
    <div>Użytkownik Niezalogowany.</div>
    <br />
    <a asp-controller="Account" asp-action="Register">Rejestracja</a>
    <br />
    <a asp-controller="Account" asp-action="Login">Zaloguj</a>
    <br />
}
else
{
    <div>
        <p>            Zalogowany użytkownik: @User.Identity.Name        </p>
        <br />
        @{
            if (User.IsInRole("AdministratorIT"))
            {
                <p>Witaj AdministratorIT</p>
                <a asp-controller="Role" asp-action="Index">Zarządzaj rolami użytkowników</a>
            }
            else if (User.IsInRole("Producent"))
            { <p>Witaj Producent</p> }
            else if (User.IsInRole("Konsument"))
            { <p>Witaj Konsument</p> }
            else
            { <p>Brak roli w systemie</p> }
        }
    </div>
    <a asp-controller="Account" asp-action="LogOut">Wyloguj użytkownika [@User.Identity.Name]</a>
    <br />
    <a asp-controller="Role" asp-action="Index">Zarządzaj rolami użytkowników w systemie</a>
    <br />
}

